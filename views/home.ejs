<!DOCTYPE html>
<html>
<head>
  <title>Summer Camp 2025 @ NHCE</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="https://img.icons8.com/color/48/camping-tent.png" type="image/x-icon">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Bytesized&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Roboto, sans-serif;
    }

    body {
      overflow: auto;
      width: 100vw;
      height: 100svh;
      background-image: url("/bg.jpg"), linear-gradient(to right, #f4fafa, #f4f8fc);
      background-clip: content-box;
      background-size: contain;
      background-position: bottom;
      background-repeat: no-repeat;
    }

    .loading-screen {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100svh;
      background-color: #ffffff;
      z-index: 1000;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 1.5rem;
      font-weight: bold;
      transition: opacity 0.5s ease, visibility 0.5s ease;
    }

    .loading-screen.hidden {
      opacity: 0;
      visibility: hidden;
    }

    .container {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 3rem 0; 
      opacity: 0;
      animation: fadeIn 1s ease forwards;
      animation-delay: 0.5s;
    }

    h1 {
      padding: 8px 12px;
      text-align: center;
      font-size: clamp(28px, 5vw, 40px);
      font-weight: 600;
      opacity: 0;
      /* transform: translateY(-20px); */
      animation: h1slideUpFade 1s ease forwards;
      animation-delay: 1s;
    }
    .subtitle{
      padding: 8px 12px;
      text-align: center;
      font-size: clamp(24px, 5vw, 32px);
      /* font-weight: 900; */
      opacity: 0;
      /* transform: translateY(-20px); */
      animation: h1slideUpFade 1s ease forwards;
      animation-delay: 1s;
    }
    ul {
      padding: 4px 4px;
      margin: 0 20px;
      margin-top: 20px;
      height: 60vh;
      overflow-y: auto;
      width: 100%;
      max-width: 500px;
      background-color: rgba(255, 255, 255, 0.5);
      border-radius: 8px;
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      list-style: none;
      opacity: 0;
      transform: translateY(20px);
      animation: slideUpFadeIn 1s ease forwards;
      animation-delay: 1.5s;
      scroll-snap-type: y mandatory;
      box-shadow: #75757542 0px 0px 10px 0px;
    }

    li {
      padding: 8px 12px;
      margin: 0 4px;
      /* border-radius: 8px; */
      display: flex;
      justify-content: space-between;
      align-items: center;
      /* flex-wrap: wrap; */
      font-size: clamp(16px, 5vw, 24px);
      border-top: 1px solid rgba(0, 0, 0, 0.1);
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      scroll-snap-align: start;
      cursor:default;
    }

    li:hover {
      background-color: rgba(255, 255, 255, 0.2); 
      /* backdrop-filter: blur(5px);
      -webkit-backdrop-filter: blur(5px); */
    }

    a {
      text-decoration: none;
      color: #000;
      /* margin-left: auto; */
    }

    span {
      /* flex: 0.5; */
      word-break: break-word;
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }
    @keyframes h1slideUpFade {
      0% {
        transform: translateY(150%); 
        opacity: 0;
        /* font-size: 60px; */
      }
      40% {
        opacity: 0.5;
        /* transform: translateY(0%); */
      }
      100% {
        opacity: 1;
        transform: translateY(0%);
        /* font-size: clamp(24px, 5vw, 48px); */
      }
    }

    @keyframes slideDownFadeIn {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideUpFadeIn {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 600px) {
      ul {
        width: 90%;
        max-height: 60vh;
        font-size: 0.9rem;
      }

      /* li {
        flex-direction: column;
        align-items: flex-start; 

      } */

      a {
        margin-left: 0;
        margin-top: 4px;
      }
    }
  </style>
</head>
<body>
  <!-- Flash screen -->
  <div class="loading-screen" id="loadingScreen">
    Loading...
  </div>

  <!-- Main content -->
  <div class="container" id="mainContent">
    <h1>Welcome to Summer Camp NHCE</h1>
    <p class="subtitle">Introduction to WEB development Workshop</p>
    <ul id="fileList"></ul>
  </div>

  <script>
    const loadingScreen = document.getElementById('loadingScreen');
    const mainContent = document.getElementById('mainContent');
    const fileList = document.getElementById('fileList');

    function fetchFiles(path) {
      fetch(`/files?path=${path || ''}`)
        .then(response => response.json())
        .then(data => {
          fileList.innerHTML = '';

          data.forEach(file => {
            const listItem = document.createElement('li');

            const name = document.createElement("span");
            name.textContent = file.name;
            listItem.appendChild(name);

            const item = document.createElement('a');
            item.textContent = "My page";
            item.href = "/" + file.link;

            listItem.appendChild(item);
            fileList.appendChild(listItem);
          });

          // Hide loading screen and reveal content
          loadingScreen.classList.add('hidden');
          // Animation already kicks in from CSS
        })
        .catch(err => {
          loadingScreen.textContent = "Failed to load content!";
          console.error(err);
        });
    }

    window.addEventListener("DOMContentLoaded", () => {
      fetchFiles();
    });
  </script>
</body>
</html>
